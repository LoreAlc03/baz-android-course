<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/box_crypto_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        android:elevation="8dp"
        app:cardBackgroundColor="@color/blue">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_crypto"
            android:layout_width="51dp"
            android:layout_height="55dp"
            android:src="@drawable/ic_monetization"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_crypto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@id/img_crypto"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/coin" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_mx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/txt_crypto_name"
            app:layout_constraintTop_toBottomOf="@id/txt_crypto_name"
            app:layout_goneMarginTop="4dp"
            tools:text="@string/mxn"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_min_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/txt_crypto_name"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/max_price" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id ="@+id/txtMaxPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/txt_min_price"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/min_price"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</FrameLayout>